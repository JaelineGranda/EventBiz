<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.me.pojo.Booking" table="bookings">
        <id name="bookingid" column="bookingid" type="long">
            <generator class="native" />
        </id>
        <property name="customerid" column="customerid" type="long"/>
        <property name="firstname" column="firstname" type="string" />
        <property name="lastname" column="lastname" type="string" />
        <property name="email" column="email" type="string" />
        <property name="eventid" column="eventid" type="long" />
        <property name="eventname" column="eventname" type="string" />
        <property name="eventdate" column="eventdate" type="date" />
        <property name="amount" column="amount" type="float" />
        <property name="tickets" column="tickets" type="long"/>
    </class>
</hibernate-mapping>